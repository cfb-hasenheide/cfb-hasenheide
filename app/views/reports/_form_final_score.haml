.row
  - if f.object.home?
    .col
      = render 'layouts/de_and_increasable_number_field',
        f: f,
        method: :club_final_score,
        help_text: f.object.club_team_name

    .col
      = render 'layouts/de_and_increasable_number_field',
        f: f,
        method: :rival_final_score,
        help_text: f.object.rival_team_name

  - else
    .col
      = render 'layouts/de_and_increasable_number_field',
        f: f,
        method: :rival_final_score,
        help_text: f.object.rival_team_name

    .col
      = render 'layouts/de_and_increasable_number_field',
        f: f,
        method: :club_final_score,
        help_text: f.object.club_team_name
