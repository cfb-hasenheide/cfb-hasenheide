= bootstrap_form_for report, layout: :horizontal, label_col: 'col-md-2',
  control_col: 'col-md-10' do |f|

  = f.alert_message 'Folgende Fehler sind aufgetreten:'

  .form-group
    = label_tag 'Event', nil, class: 'col-md-2 control-label'
    .col-md-4
      %p.form-control-static
        = report.event.name
        = surround '(', ')' do
          = l(report.event.datetime, format: :date_only)

  .form-group
    = label_tag 'Endstand', nil, class: 'col-md-2 control-label'
    .col-md-4
      .input-group
        - if report.event.home?
          %span.input-group-addon= report.event.club_team.name

          = f.number_field_without_bootstrap :club_final_score, min: 0,
            class: 'form-control'

          %span.input-group-addon :

          = f.number_field_without_bootstrap :rival_final_score, min: 0,
            class: 'form-control'

          %span.input-group-addon= report.event.rival_team.name

        - else
          %span.input-group-addon= report.event.rival_team.name

          = f.number_field_without_bootstrap :rival_final_score, min: 0,
            class: 'form-control'

          %span.input-group-addon :

          = f.number_field_without_bootstrap :club_final_score, min: 0,
            class: 'form-control'

          %span.input-group-addon= report.event.club_team.name

  .form-group
    = label_tag 'Halbzeitstand', nil, class: 'col-md-2 control-label'
    .col-md-4
      .input-group
        - if report.event.home?
          %span.input-group-addon= report.event.club_team.name

          = f.number_field_without_bootstrap :club_half_time_score, min: 0,
            class: 'form-control'

          %span.input-group-addon :

          = f.number_field_without_bootstrap :rival_half_time_score, min: 0,
            class: 'form-control'

          %span.input-group-addon= report.event.rival_team.name

        - else
          %span.input-group-addon= report.event.rival_team.name

          = f.number_field_without_bootstrap :rival_half_time_score, min: 0,
            class: 'form-control'

          %span.input-group-addon :

          = f.number_field_without_bootstrap :club_half_time_score, min: 0,
            class: 'form-control'

          %span.input-group-addon= report.event.club_team.name

  = f.text_area :content, class: 'wysihtml5'

  = f.form_group do
    = f.submit class: 'btn btn-primary'
    = link_to 'Abbrechen', reports_path, class: 'btn btn-default'
