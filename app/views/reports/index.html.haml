.page-header
  %h1
    Spielberichte

    - if admin?
      .pull-right
        = link_to new_report_path, class: 'primary-button' do
          = create_icon
          %span.hidden-xs Bericht erstellen

%ul
  - for report in @reports
    %li
      = link_to edit_report_path(report) do
        = report.event.generated_name
        = surround '(', ')' do
          = report.final_score

.text-center.text-muted
  = page_entries_info(@reports)
.text-center
  = paginate @reports
