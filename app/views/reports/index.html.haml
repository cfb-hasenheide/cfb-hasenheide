.page-header
  %h1
    Spielberichte

    - if admin?
      .pull-right
        = link_to new_report_path, class: 'primary-button' do
          = create_icon
          %span.hidden-xs Bericht erstellen

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th Event
        %th Datum
        %th.text-center Endstand
        %th.text-center Halbzeitstand
        %th.text-center Bericht?
        %th.text-right.text-muted Aktionen

    %tbody
      - for report in @reports
        %tr
          %td= report.event.name
          %td.text-muted= l(report.event.datetime, format: :date_only)
          %td.text-center
            .label{class: "label-#{label_class_for_report(report)}"}
              = report.final_score
          %td.text-center.text-muted= report.half_time_score
          %td.text-center
            - if report.content.present?
              %span.text-success= report_icon
            - else
              %span.text-danger= report_icon
          %td.text-right= link_to 'bearbeiten', edit_report_path(report)

.text-center.text-muted
  = page_entries_info(@reports)
.text-center
  = paginate @reports
