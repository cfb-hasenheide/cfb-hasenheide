= content_for :title, 'Fehlende Spielberichte'

.page-header
  %h1= content_for :title

.table-responsive
  %table.table.table-hover
    %thead
      %tr
        %th Event
        %th Datum
        %th.text-right.text-muted Aktionen

    %tbody
      - @events_without_report.each do |event|
        %tr
          %td= event.name
          %td.text-muted= l(event.datetime, format: :date_only)
          %td.text-right
            = link_to new_report_path, class: 'btn btn-primary btn-xs' do
              = create_icon
              Erstellen

= render 'layouts/pagination', entries: @events_without_report
