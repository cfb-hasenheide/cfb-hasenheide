- if admin?
  .well.well-sm
    = link_to edit_report_path(report), class: 'btn btn-default btn-sm' do
      %span.text-warning
        = edit_icon
        Bearbeiten

%dl.dl-horizontal
  %dt Endstand
  %dd= report.final_score
  %dt Halbzeitstand
  %dd= report.half_time_score

- if @report.content.present?
  = @report.content
- else
  %strong.text-muted Noch kein Bericht vorhanden
