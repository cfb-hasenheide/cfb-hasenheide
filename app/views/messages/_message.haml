%li.list-group-item
  .media
    .media-left
      = image_tag message.user.player.avatar_url(:small_thumb),
        width: '30',
        height: '30',
        alt: current_user.player.nickname,
        class: 'img-circle'
    .media-body
      = link_to player_path(message.user.player) do
        %strong.text-muted
          = message.user.player.nickname
      %small.pull-right.text-muted= l(message.created_at, format: :short)
      %br
      = message.content
