.thumbnail
  = image_tag player.avatar_url(:thumb)
  .caption
    %h3
      = player.nickname
      .pull-right.text-muted
        = player.jersey_name unless player.jersey_name == player.nickname
        = player.jersey_number

    %p.text-center
      = t(player.status, scope: %w(activerecord enums player status))
      = '| Spielerpass' if player.player_pass?

    %p.text-center
      = link_to player_path(player), class: 'default-button' do
        Profil
