= bootstrap_form_for player,
  layout: :horizontal,
  label_col: 'col-md-2',
  control_col: 'col-md-4' do |f|

  - unless player.user_id?
    = f.collection_select :user_id, User.all, :id, :username

  = f.text_field :nickname

  = f.text_field :first_name

  = f.text_field :last_name

  = f.date_select :date_of_birth,
    start_year: Date.today.year - 100,
    end_year: Date.today.year,
    prompt: true

  = f.text_field :place_of_birth

  %hr

  = f.text_field :street

  = f.text_field :zipcode

  = f.text_field :city

  = f.text_field :phone1

  = f.text_field :phone2

  = f.text_field :club_email

  %hr

  = f.text_field :membership_number

  = f.date_select :member_since,
    start_year: Date.today.year - 100,
    end_year: Date.today.year,
    prompt: true

  = f.date_select :member_until,
    start_year: Date.today.year - 100,
    end_year: Date.today.year,
    prompt: true

  %hr

  = f.form_group do
    = f.check_box :player_pass,
      'data-toggle' => 'collapse',
      'data-target' => '#playerPassForm'

  .collapse#playerPassForm
    = f.text_field :player_pass_number

    = f.date_select :eligible_to_play_since,
      start_year: Date.today.year - 100,
      end_year: Date.today.year,
      prompt: true

  %hr

  = f.number_field :jersey_number, min: 0, max: 99

  = f.text_field :jersey_name

  %hr

  = f.form_group do
    = f.submit class: 'primary-button'
    = link_to 'Abbrechen', players_path, class: 'default-button'
