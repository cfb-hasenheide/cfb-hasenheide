= content_for :title, 'Spieler'

.page-header
  %h1
    = content_for :title
    - if admin?
      .pull-right
        = link_to new_player_path, class: 'primary-button' do
          = create_icon
          %span.hidden-xs Spieler erstellen

- @players.in_groups_of(4) do |players|
  .row
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      = render 'player', player: players.first
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      = render 'player', player: players.second if players.second.present?
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      = render 'player', player: players.third if players.third.present?
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      = render 'player', player: players.fourth if players.fourth.present?

= render 'layouts/pagination', entries: @players
