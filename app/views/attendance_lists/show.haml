= content_for(:title, "Meldeliste #{@event.name}")

= render 'events/subnavigation', event: @event

.page-header
  %h1
    Meldeliste
    %small= @event.name

= render 'events/basic_information', event: @event

= render 'admin_bar', attendance_list: @attendance_list

.halfs
  .half
    .panel.panel-default
      .panel-heading
        %h2.panel-title Meldung abgeben

      .panel-body

  .half
    .panel.panel-default
      .panel-heading
        %h2.panel-title Meldungen

      .panel-body

= @attendance_list.open?
= @attendance_list.minimum
= @attendance_list.maximum
