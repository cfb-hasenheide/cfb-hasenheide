.panel.panel-primary
  .panel-heading
    %h2.panel-title
      EmpfÃ¤nger
      %small.recipientsCount
        = @club_team.name

  .panel-body
    = f.collection_check_boxes 'player_ids[]',
      @club_team.players, :id, :name_and_status,
      checked: @eligible_players.pluck(:id), hide_label: true

    = button_tag type: 'button', 'data-toggle' => 'collapse',
      'data-target' => '#selectRecipients', class: 'btn-sm primary-button' do
