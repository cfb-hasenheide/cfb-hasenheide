.btn-toolbar
  .btn-group.btn-group-justified
    = link_to edit_polymorphic_path(event), class: 'default-button' do
      = edit_icon
      Bearbeiten

    - if event.replyable?
      .btn-group{role: 'group'}
        %button.btn.btn-default.dropdown-toggle{type: 'button',
          'data-toggle' => 'dropdown', 'aria-haspopup' => 'true',
          'aria-expanded' => 'false'}
          Schließen
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to close_event_path(event), method: :post do
              ohne E-Mail
          %li
            = link_to '#' do
              = mail_icon
              Final Call
    - else
      .btn-group{role: 'group'}
        %button.btn.btn-default.dropdown-toggle{type: 'button',
          'data-toggle' => 'dropdown', 'aria-haspopup' => 'true',
          'aria-expanded' => 'false'}
          Öffnen
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to open_event_path(event), method: :post do
              ohne E-Mail
          %li
            = link_to '#' do
              = mail_icon
              mit E-Mail
    .btn-group{role: 'group'}
      %button.btn.btn-default{type: 'button', 'data-toggle' => 'modal',
        'data-target' => '#adminModal'}
        Melden
    = link_to event_path(event), method: :delete, class: 'danger-button',
      data: { confirm: 'Event wirklich löschen?' } do
      Löschen
