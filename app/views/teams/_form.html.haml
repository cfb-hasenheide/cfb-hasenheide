= simple_form_for(@team) do |f|
  = f.error_notification

  .form-inputs
    .half-half
      .left-half
        = f.input :name
      .right-half
        = f.input :description
    .thirds
      .third
        = f.input :club
      .third
        = f.input :player_pass_needed
      .third
        = f.input :current_season

  .form-actions
    = f.button :submit, 'Speichern', class: 'primary-button'
    = link_to 'Abbrechen', teams_path, class: 'default-button'
