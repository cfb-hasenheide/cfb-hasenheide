= content_for(:title, 'Trainings')

.page-header
  %h1
    = content_for(:title)

    - if can?(:create, Training)
      .pull-right
        = link_to new_training_path, class: 'primary-button' do
          = create_icon
          %span.hidden-xs Training erstellen

.text-center
  %small.text-muted= page_entries_info @trainings

%ul.list-group
  = render @trainings

.text-center
  = paginate @trainings
