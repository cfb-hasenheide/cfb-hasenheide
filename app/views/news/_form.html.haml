= form_for @news, html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :internal, class: 'control-label col-md-2'
    .col-md-4
      = f.check_box :internal,
        class: 'bootstrap-switch',
        'data-on-color' => 'success',
        'data-on-text' => 'Intern',
        'data-off-color' => 'warning',
        'data-off-text' => 'Ã–ffentlich'

  .form-group
    = f.label :title, class: 'control-label col-md-2'
    .col-md-6
      = f.text_field :title, class: 'form-control'

  .form-group
    = f.label :content, class: 'control-label col-md-2'
    .col-md-10
      = f.cktext_area :content,
        class: 'form-control',
        rows: 10,
        ckeditor: { language: :de }

  .form-group
    .col-md-10.col-md-offset-2
      = f.submit class: 'primary-button'
      = link_to 'Abbrechen', news_index_path, class: 'default-button'
