.page-header
  %h1
    News
    - if admin?
      .pull-right
        = link_to new_news_path, class: 'primary-button' do
          %span.glyphicon.glyphicon-plus
          Neues Event erstellen

- for news in @news
  .panel.panel-primary
    .panel-body
      %h3.panel-title
        = news.title
        - if news.internal
          %span.label.label-primary Intern
        %small.pull-right
          = l(news.created_at, format: :short)

    .panel-body
      = news.content.html_safe

    - if admin?
      .panel-footer
        = link_to edit_news_path(news), class: 'default-button-xs' do
          %span.glyphicon.glyphicon-wrench
          Bearbeiten
        = link_to news, method: :delete, class: 'danger-button-xs',
          data: { :confirm => 'Are you sure?' } do
          %span.glyphicon.glyphicon-trash
          LÃ¶schen

= paginate(@news)
