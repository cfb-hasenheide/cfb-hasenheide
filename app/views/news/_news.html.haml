.panel.panel-primary
  .panel-body
    %h3
      = news.title
      %small
        %strong.text-muted= 'Intern' if news.internal
        %span.pull-right= l(news.created_at, format: :date_only)

    = news.content.html_safe

  - if admin?
    .panel-footer
      = link_to edit_news_path(news), class: 'default-button-xs' do
        = edit_icon
        Bearbeiten

      = link_to news,
        method: :delete,
        class: 'default-button-xs',
        data: { :confirm => 'Wirklich unwiderruflich löschen?' } do
        %span.text-danger
          = delete_icon
          Löschen
