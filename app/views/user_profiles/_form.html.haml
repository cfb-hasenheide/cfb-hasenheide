= simple_form_for(@user_profile) do |f|
  = f.error_notification

  .form-inputs
    .halfs
      .half
        = f.association :user, as: :hidden
        = f.input :alias

      .half
        .well.well-sm
          = image_tag(@user_profile.avatar_url, class: 'img-thumbnail') if @user_profile.avatar?
          = f.input :avatar, as: :file
          = f.input :remote_avatar_url
          = f.input :avatar_cache, as: :hidden
          = f.check_box :remove_avatar
          Remove Avatar

  .form-actions
    = f.button :submit, 'Speichern', class: 'primary-button'
