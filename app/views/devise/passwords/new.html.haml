.row
  .col-lg-4.col-lg-offset-4.col-sm-12

    .panel.panel-default
      .panel-heading
        %h3.panel-title Passwort vergessen?

      = bootstrap_form_for resource,
        as: resource_name,
        url: password_path(resource_name),
        method: :post do |f|

        .panel-body
          = f.alert_message 'Es sind Fehler aufgetreten!', error_summary: false

          = f.email_field :email, autofocus: true, icon: :envelope

        .panel-footer
          = f.primary 'Passwort zur√ºcksetzen'

    = render 'devise/shared/links'
