.row
  .col-lg-4.col-lg-offset-4.col-sm-12

    .panel.panel-default
      .panel-heading
        %h3.panel-title Passwort ändern

      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        .panel-body
          = devise_error_messages!

          = f.hidden_field :reset_password_token

        .form-group
          = f.label :password, 'Neues Passwort'
          = f.password_field :password, autofocus: true, autocomplete: 'off',
            class: 'form-control'

        .form-group
          = f.label :password_confirmation, 'Neues Passwort bestätigen'
          = f.password_field :password_confirmation, autocomplete: 'off'

      .panel-footer
        = f.submit 'Change my password', class: 'btn btn-primary btn-block'

    = render 'devise/shared/links'
