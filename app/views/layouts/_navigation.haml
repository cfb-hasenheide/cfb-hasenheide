%nav.navbar.navbar-fixed-top.navbar-inverse{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{'data-target' => '#navigation', 'data-toggle' => 'collapse', type: 'button'}
        %span.sr-only Navigation aus-/einklappen
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} CFB Hasenheide

    #navigation.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{class: ('active' if params[:controller] == 'pages' && params[:action] == 'welcome')}
          %a{href: root_path} Start

        %li{class: ('active' if params[:controller] == 'events')}
          %a{href: events_path} Events

        %li{class: ('active' if params[:controller] == 'pages' && params[:action] == 'contact')}
          %a{href: '/contact'} Kontakt

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %p.navbar-text
            Hallo #{current_user.username}!
          %li
            = link_to 'Account bearbeiten', edit_user_registration_path
          %li
            = link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          %li
            = link_to 'Registrieren', new_user_registration_path
          %li
            = link_to 'Login', new_user_session_path
