= render @homepage_header if @homepage_header

.row
  .col-md-8
    .card.mb-4
      .card-header
        .d-flex.justify-content-between.align-items-center
          = News.model_name.human(count: 2)

          = link_to 'Alle anzeigen', news_index_path, class: 'badge badge-secondary'

    = render @news

  .col-md-4
    .card
      .card-header
        .d-flex.justify-content-between.align-items-center
          = Event.model_name.human(count: 2)

          - if user_signed_in?
            = link_to 'Alle anzeigen', events_path, class: 'badge badge-secondary'

      .card-body.text-muted
        Kommende

      = render 'events/list_short', events: @future_events

      .card-body.text-muted
        Vergangene

      = render 'events/list_short', events: @past_events

.card.mt-4
  .card-header
    Tabelle

  .card-body
    .fussballDeWidget#tableCFB
      = spinner_icon
      Lade Tabelle

.card.mt-4
  .card-header
    Spielplan

  .card-body
    .fussballDeWidget#scheduleCFB
      = spinner_icon
      Lade Spielplan
