= render @homepage_header if @homepage_header

.row
  .col-md-8
    .card.card-primary.card-inverse
      %h2.card-header
        = link_to 'Neuigkeiten', news_index_path

    .card-columns
      - @posts.each do |post|
        = render 'posts/preview', post: post

  .col-md-4
    .card
      %h2.card-header
        = link_to_if user_signed_in?, 'Events', events_path

      .card-block
        %p.card-text
          %small.text-muted Kommende

      = render 'events/list_short', events: @future_events

      .card-block
        %p.card-text
          %small.text-muted Vergangene

      = render 'events/list_short', events: @past_events

.card
  %h2.card-header Tabelle

  .card-block
    %p.card-text
      .fussballDeWidget#tableCFB
        = spinner_icon
        Lade Tabelle

.card
  %h2.card-header Spielplan

  .card-block
    %p.card-text
      .fussballDeWidget#scheduleCFB
        = spinner_icon
        Lade Spielplan
