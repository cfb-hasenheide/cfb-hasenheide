.page-header
  %h1
    Events
    %small= @events.count

%table
  %tr
    %th Name
    %th Datetime
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.name
      %td= event.datetime
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Neues Event', new_event_path, class: 'primary-button'
