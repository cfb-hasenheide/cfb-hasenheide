.row
  .col-md-6
    = form_for @event, html: { class: 'form-horizontal' } do |f|
      .form-group
        = f.label :kind, class: 'col-md-4 control-label'
        .col-md-8
          = f.select :kind,
            options_for_select(event_kind_options, @event.kind),
            {},
            class: 'form-control'

      .form-group
        = f.label :club_team_id, class: 'col-md-4 control-label'
        .col-md-8
          = f.select :club_team_id,
            options_from_collection_for_select(Team.club, :id, :name, @event.club_team_id),
            {},
            class: 'form-control'
          %span.help-block
            %small
              = link_to new_team_path(home: true) do
                = create_icon
                hinzufügen

      .form-group
        = f.label :rival_team_id, class: 'col-md-4 control-label'
        .col-md-8
          = f.select :rival_team_id,
            options_from_collection_for_select(Team.rivals, :id, :name, @event.rival_team_id),
            {},
            class: 'form-control'
          %span.help-block
            %small
              = link_to new_team_path(home: false) do
                = create_icon
                hinzufügen

      .form-group
        = f.label :home, class: 'col-md-4 control-label'
        .col-md-8
          .btn-group.btn-group-justified{'data-toggle' => 'buttons'}
            %label.btn.btn-default{class: ('active' if f.object.home == true)}
              = f.radio_button :home, true
              Heimspiel
            %label.btn.btn-default{class: ('active' if f.object.home == false)}
              = f.radio_button :home, false
              Auswärtsspiel

      .form-group
        = f.label :name, class: 'col-md-4 control-label'
        .col-md-8
          = f.text_field :name, class: 'form-control'
          %small.help-block Leer lassen für "Heimteam" : "Auswärtsteam"

      .form-group
        = label_tag 'Teilnehmer', nil, class: 'col-md-4 control-label'
        .col-md-8
          .input-group
            %span.input-group-addon min
            = f.number_field :minimum, value: 7, class: 'form-control'
            %span.input-group-addon max
            = f.number_field :maximum, value: 11, class: 'form-control'

      .form-group
        = f.label :datetime, class: 'col-md-4 control-label'
        .col-md-8
          = f.datetime_select :datetime, class: 'form-control'

      .form-group
        = f.label :address, class: 'col-md-4 control-label'
        .col-md-8
          .input-group
            = f.text_field :address, class: 'form-control'
            %span.input-group-addon
              = address_icon

      .form-group
        = f.label :description, class: 'col-md-4 control-label'
        .col-md-8
          = f.text_area :description, rows: 5, class: 'form-control'

      .form-group
        .col-md-offset-4.col-md-8
          = f.submit class: 'primary-button'
          = link_to 'Abbrechen', events_path, class: 'default-button pull-right'

  .col-md-6
    = render 'layouts/error_messages', model: @event
