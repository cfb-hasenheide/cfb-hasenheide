= simple_form_for(@event) do |f|
  = f.error_notification

  .form-inputs
    .half-half
      .left-half
        = f.input :kind, collection: event_kind_options, selected: @event.kind
      .right-half
        = f.input :datetime,
          input_html: {id: 'datetimepicker'},
          as: :string
    .half-half
      .left-half
        = f.input :name
      .right-half
        = f.input :home
    .half-half
      .left-half
        = f.input :club_team_id,
                  collection: Team.club,
                  prompt: 'bitte wählen',
                  selected: f.object.club_team_id
      .right-half
        = f.input :rival_team_id,
                  collection: Team.rivals,
                  prompt: 'bitte wählen',
                  selected: f.object.rival_team_id
    .half-half
      .left-half
        = f.input :minimum,
                  collection: 1..User.count,
                  selected: f.object.minimum || 7,
                  include_blank: true
      .right-half
        = f.input :maximum,
                  collection: 1..User.count,
                  selected: f.object.maximum || 11,
                  include_blank: true

    = f.input :address
    = f.input :description, as: :text

  .form-actions
    = f.button :submit, 'Speichern', class: 'primary-button'
    = link_to 'Abbrechen', events_path, class: 'default-button'
