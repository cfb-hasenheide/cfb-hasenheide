.list-group
  = link_to event_or_attendance_list_or_report_path(event),
    class: 'list-group-item' do

    %h4.list-group-item-heading
      = event.name

    %p.list-group-item-text
      %ul.list-unstyled
        %li
          = date_icon
          = l(event.datetime, format: :date_only)
        %li
          = time_icon
          = l(event.datetime, format: :time_only)
        %li
          = address_icon
          = event.address

      .label.label-default= event.model_name.human

      .pull-right
        = event_attendance_label(event)
        = event_final_score_label(event)
