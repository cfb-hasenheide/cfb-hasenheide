.list-group
  = link_to event_show_path(event),
    class: event_list_group_item_css_class(event) do

    %h4.list-group-item-heading
      = event.name

    %p.list-group-item-text
      %ul.list-unstyled
        %li
          = date_icon
          = l(event.datetime, format: :date_only)
        %li
          = time_icon
          = l(event.datetime, format: :time_only)
        %li
          = address_icon
          = event.address

      .label.label-default= event.model_name.human

      .pull-right
        - if !event.past? && event.replyable?
          %span.label.label-primary
            - status = Reply.for_event_and_user(event, current_user).status
            = I18n.t("reply_status.#{status}")

        - elsif event.past? && event.report.present?
          %span.label{class: event_label_css_class(event)}
            = event.report.final_score
