.list-group
  = link_to event_path(event),
    class: 'list-group-item' do

    %h4.list-group-item-heading
      = event.name

    %p.list-group-item-text
      %ul.list-unstyled
        %li
          = date_icon
          = l(event.datetime, format: :date_only)
        %li
          = time_icon
          = l(event.datetime, format: :time_only)
        %li
          = address_icon
          = event.address

      .label.label-default= event.model_name.human

      .pull-right
        - if !event.past? && event.attendance_list_open?
          %span.label.label-primary
            - status = event.attendances.find_by(player_id: current_user.player.id).status
            = t(status, scope: %w(activerecord enums attendance status))

        - elsif event.past? && event.report.present?
          %span.label{class: event_label_css_class(event)}
            = event.report.final_score
